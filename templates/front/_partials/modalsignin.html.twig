<!-- Modal connection-->

   <div class="modal fade" id="login" tabindex="-1" aria-labelledby="loginLabel" aria-hidden="true">
       <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header text-center">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <h5 class="modal-title text-center" id="modalConnectionLabel">Bienvenue chez Thé Tip Top</h5>
        <form action="{{path('login')}}" method="post">
        <div class="modal-body">
          
          <div class="row ">
            <div class="col-sm-8 my-4">
              <input type="email" class="form-control input-modal" id="username" name="_username"  placeholder="Adresse e-mail*" required>
            </div>
            <div class=" position-relative">
              <input type="password" class="form-control input-modal password" id="password" name="_password" placeholder="Password*" required>
              <span class="eye-password-content">
							  <i class="fas fa-eye-slash hide eye" id="eye"></i>
						  </span>
            </div>
          </div>
          <div class=" justify-content-end">
            <button type="submit" class="btn forgot-pwd-btn" data-bs-toggle="modal" data-bs-target="#forgetpwd"><u>J’ai perdu mon mot de passe</u></button>
          </div>
          
        </div>
        <div class=" d-flex justify-content-center mb-5">
          <button type="submit" class="btn btn-ins" >Se connecter</button>
        </div>
        </form>
      </div>
    </div>
  </div>